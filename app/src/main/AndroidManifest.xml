<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.neotech.app.hellopizza">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeCompat">

        <activity android:name=".MainActivity">
            <intent-filter>
                <!-- This Activity is the starting point of the application -->
                <action android:name="android.intent.action.MAIN" />
                <!-- This Activity should be shown in Launcher applications -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LifecycleActivity"
            android:theme="@style/AppTheme" />

        <!-- Just like the MainActivity these Activity's inherit the applications base theme -->
        <activity android:name=".LifecycleActivityCompat" />
        <activity android:name=".LeakActivity" />
        <activity android:name=".RestoreActivity" />
    </application>

</manifest>